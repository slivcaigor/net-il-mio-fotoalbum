@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="max-w-screen-xl mx-auto mb-20">
    <div class=" flex flex-col relative items-center w-full lg:pt-20 lg:flex-row">
        <div class="w-full bg-cover max-w-sm lg:max-w-2xl lg:w-7/12">
            <div class="flex flex-col items-center justify-center w-full h-full relative p-4 lg:p-8">
                <img src="/img/LoginJumbo.png" class="w-full" loading="lazy" />
            </div>
        </div>

        <div class="w-full mt-20 mr-0 mb-0 ml-0 relative z-10 max-w-2xl lg:mt-0 lg:w-5/12">
            <div class="flex flex-col items-start justify-start pt-10 pr-10 pb-10 pl-10 bg-white shadow-2xl rounded-xl relative z-10">
                <p class="w-full text-4xl font-medium text-center leading-snug font-serif">Login to your account</p>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-center"></div>
                <div class="w-full relative">
                    <form id="account" method="post">
                        <div class="relative mt-6 mr-0 mb-0 ml-0 space-y-8">
                            <p class="bg-white pt-0 pr-2 pb-0 pl-2 -mt-3 mr-0 mb-0 ml-2 font-medium text-gray-600 absolute">Email</p>
                            <input asp-for="Input.Email" placeholder="123@ex.com" type="text" class="border placeholder-gray-400 focus:outline-none focus:border-black w-full pt-4 pr-4 pb-4 pl-4 mt-2 mr-0 mb-0 ml-0 text-base block bg-white border-gray-300 rounded-md" />
                            <span asp-validation-for="Input.Email" class="text-red-600"></span>
                        </div>
                        <div class="relative mt-6 mr-0 mb-0 ml-0 space-y-8">
                            <p class="bg-white pt-0 pr-2 pb-0 pl-2 -mt-3 mr-0 mb-0 ml-2 font-medium text-gray-600 absolute">Password</p>
                            <input asp-for="Input.Password" placeholder="Password" type="password" class="border placeholder-gray-400 focus:outline-none focus:border-black w-full pt-4 pr-4 pb-4 pl-4 mt-2 mr-0 mb-0 ml-0 text-base block bg-white border-gray-300 rounded-md" />
                            <span asp-validation-for="Input.Password" class="text-red-600"></span>
                        </div>
                        <div class="relative mt-6 mr-0 mb-0 ml-0 space-y-8 flex items-center">
                            <div class="flex items-center">
                                <input type="checkbox" id="rememberMe" class="form-checkbox">
                                <label for="rememberMe" class="ml-2">@Html.DisplayNameFor(m => m.Input.RememberMe)</label>
                            </div>
                        </div>
                        <div>
                            <div class="relative mt-6 mr-0 mb-4 ml-0 space-y-8 ">
                                <button id="login-submit" type="submit" class="w-full inline-block pt-4 pr-5 pb-4 pl-5 text-xl font-medium text-center text-white bg-black rounded-lg transition duration-200 hover:bg-slate-950 ease">
                                    Log in
                                </button>
                            </div>
                            <div>
                                <p class="text-center">
                                    <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                                </p>
                            </div>
                        </div>
                    </form>
