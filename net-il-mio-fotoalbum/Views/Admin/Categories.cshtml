@{
    ViewData["Title"] = "Add new category";
    @model List<Category>

}



<div class="max-w-screen-xl mx-auto mt-5">

    <div class="mt-6 mx-auto max-w-sm">
        <form class="mt-4 flex flex-wrap" asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="flex-grow mr-2 flex items-center">
                <input class="w-full px-4 py-3 border rounded" type="text" id="name" name="name" required>
                <button class="btn btn-primary bg-black text-sm rounded ml-3" type="submit">Create</button>
            </div>
        </form>
    </div>

    <div class="my-6">
        @if (Model != null && Model.Count > 0)
        {
            <div class="grid grid-cols-3 gap-4">
                @foreach (var category in Model)
                {
                    <div class="relative border px-4 flex justify-between items-center py-2">
                        @category.Name
                        <form asp-controller="Admin" asp-action="DeleteCategory" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this message?');">
                            <button type="submit" class="btn btn-primary bg-black text-sm">Delete</button>
                        </form>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No categories found.</p>
        }
    </div>

    
</div>
